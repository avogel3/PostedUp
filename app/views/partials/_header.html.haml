%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'PostedUp', root_path, class: 'navbar-brand'

    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          = link_to root_path do
            Activity Feed
            %span.sr-only (current)
        - if current_user
          %li= link_to 'My Posts', my_posts_path
      %ul.nav.navbar-nav.navbar-right
        - unless user_signed_in?
          .hidden-xs.padding-top-7px= link_to 'Sign In', new_user_session_path, class: 'btn btn-success'
        - if user_signed_in?
          %li.dropdown#user_menu
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.display_name
              %span.caret
            %ul.dropdown-menu
              - unless user_signed_in?
                %li= link_to 'Sign In', new_user_session_path
              %li= link_to 'Another action', '#'
              %li= link_to 'Something else here', '#'
              %li.divider{:role => "separator"}
              %li= link_to 'Separated link', '#'
    / /.navbar-collapse
  / /.container-fluid
