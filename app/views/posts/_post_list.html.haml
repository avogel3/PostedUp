%div
  - if @posts.any?
    - @posts.each do |post|
      .panel.panel-default
        .panel-heading
          %h4= link_to post.title, post
          %span.label.label-default= post.user.display_name if post.user
          %span.label.label-info= post.post_status.humanize
        .panel-body
          - if post.image?
            %center= image_tag post.image.url, class: 'img-responsive'
          %br
          %div{style: "overflow: auto"}
            ~ markdown(post.content)
        .panel-footer
          = link_to 'View Post', post, class: 'btn btn-primary'
          - if can? :access, post
            = link_to 'Edit', edit_post_path(post), class: 'btn btn-info'
            = link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
  - else
    %center
      %h1 No posts yet..
